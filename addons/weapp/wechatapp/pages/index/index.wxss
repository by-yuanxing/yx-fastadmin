/**index.wxss**/
/* 轮播图 */
.banner{
  height: 400rpx;
}
.banner image{
  width: 100%;
  height: 400rpx;
}


/* 分类 */
.category{
  background-color: #ffffff; 
  /* height: 360rpx; */
  padding: 20rpx 0;
  box-sizing: border-box;
  display:flex;
  color: #353535;
}
.category .icon{
  width: 25%;
  height: 160rpx;
  text-align: center;
}
.category .icon image{
  width: 100rpx;
  height: 100rpx;
  margin: 15rpx 10rpx;
}

.category .icon text{
  display: inline-block;
  width: 100%;
  font-size: 24rpx;
  top: -20rpx;
  position: relative;
}
/* 分类 */
.cat-item{
  text-align: center;
  font-size: 30rpx;
  position: relative;
  border-bottom: 1rpx solid #dedede;
  padding: 20rpx 0;
}
.cat-item .title{
  font-weight: 600;
  border-bottom: 4rpx solid red;
  padding: 5rpx 10rpx;
}

.cat-item .more{
   position: absolute;
   right: 30rpx;
   display:inline;
   top:30rpx;
   background-color:#fff;
   font-size: 25rpx;
}
.pinpai{
  text-align: center;
  min-height:220rpx;
  /* box-sizing: border-box; */
  /* padding: 20rpx 10rpx; */
}

.pinpai .item:first-child{
   margin-left: 20rpx;
}

.pinpai .item{
  box-sizing: border-box;
  width: 260rpx;
  display:inline-block;
  margin: 20rpx 0;
  margin-right: 20rpx;
}

.pinpai image{
  width: 100%;
  height: 200rpx;
} 

.contact-bg{
  height: 320rpx;
  width: 100%;
  /* background-color: red; */
  position: relative;
}





.contact-bg image{
 width: 100%;
 height: 100%;
 position: absolute;
}

.contact-bg .button{
  width: 190rpx;
  font-size: 24rpx;
  position: absolute;
  z-index: 10;
  /* top: 10rpx; */
bottom:20px;
right:30rpx;
}

.about .content{
  box-sizing: border-box;
  padding: 0 20rpx;
}

.about-bg{
  height: 320rpx;
  width: 100%;
  /* background-color: red; */
  position: relative;
  margin: 20rpx 0;
}

.about-bg image{
 width: 100%;
 height: 100%;
 position: absolute;
}


.about .content .text{
  font-size: 24rpx;
  font-weight: 700;
  margin: 10rpx;
}

.page-body-line{
  position:fixed;
  bottom:130rpx;
  right:20rpx;
  width:78rpx;
  height:78rpx;
  background-color: #2072cf;
  border-radius: 50%;
}
.page-body-line contact-button{
  position: absolute;
  top: 14rpx;
  left: 12rpx;
}
.guest{
  position: fixed;
  bottom: 236rpx;
  right: 20rpx;
  width: 78rpx;
  height: 78rpx;
  background: #fff;
  border-radius: 50%;
}
